{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    // Allows us to use conditional/deep imports on published packages
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/screens/splash/index.js",
    "components/LoginScreen.jsx",
    "components/UserScreen.jsx",
    "app/screens/splash/index.js",
    "app/_layout.js",
    "constants/Colors.js",
    "hooks/useColorScheme.js",
    "hooks/useColorScheme.web.js",
    "hooks/useThemeColor.js",
  ]
}